<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/search_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_19"
        android:background="@drawable/common_back_icon"
        android:layout_width="@dimen/dp_9"
        android:layout_height="@dimen/dp_16"/>

    <EditText
        android:id="@+id/search_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_8"
        android:hint="请输入关键字"
        android:paddingTop="@dimen/dp_10"
        android:drawableLeft="@drawable/public_ic_search"
        android:layout_width="@dimen/dp_290"
        android:layout_height="@dimen/dp_30"/>

    <TextView
        android:id="@+id/search_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_332"
        android:layout_marginTop="@dimen/dp_18"
        android:gravity="center"
        android:text="搜索"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_17"/>
<androidx.constraintlayout.widget.ConstraintLayout
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/flowcon"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_75"
    android:layout_height="wrap_content">
    <TextView

        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#000000"
        android:text="历史搜索"
        android:layout_width="@dimen/dp_59"
        android:layout_height="@dimen/dp_15"/>

    <ImageView
        android:layout_marginTop="@dimen/dp_15"
        android:id="@+id/search_clear"
        app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/course_ic_learn_del"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_12"/>

    <com.example.itemclass.widget.FlowLayout
        android:id="@+id/search_flow"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_110"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       app:layout_constraintTop_toTopOf="parent"
       android:id="@+id/netcon"
       android:visibility="gone"
       android:layout_marginTop="@dimen/dp_75"
       android:layout_height="wrap_content">
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/search_recy"
           android:visibility="gone"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginTop="@dimen/dp_110"
           android:layout_width="match_parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:layout_height="0dp"/>

   </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>