<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="@dimen/dp_71"
        android:layout_height="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_152"
        android:layout_marginTop="@dimen/dp_22"
        android:gravity="center"
        android:text="课程列表"
        android:textColor="#000000"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/search_skip"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_marginRight="@dimen/dp_17"
        android:background="@drawable/public_ic_search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_sel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_52"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:textColor="#708090"
            android:id="@+id/course_sort"
            android:layout_width="@dimen/dp_31"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center"
            android:text="分类"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/course_img"
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_86"
            android:layout_marginTop="@dimen/dp_23"
            android:background="@drawable/common_ic_filter_down"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:textColor="#708090"
            android:layout_width="@dimen/dp_31"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_169"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center"
            android:text="排序"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_211"
            android:layout_marginTop="@dimen/dp_23"
            android:background="@drawable/common_ic_filter_down"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textColor="#708090"
            android:layout_width="@dimen/dp_31"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_290"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center"
            android:text="筛选"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_331"
            android:layout_marginTop="@dimen/dp_23"
            android:background="@drawable/common_ic_filter_down"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>