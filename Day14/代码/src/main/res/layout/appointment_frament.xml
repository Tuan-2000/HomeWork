<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="@dimen/dp_9"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_34"
        android:background="@drawable/common_back_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="@dimen/dp_71"
        android:gravity="center"
        android:layout_height="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_152"
        android:layout_marginTop="@dimen/dp_34"
        android:text="约课记录"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_83"
        android:layout_height="wrap_content"/>

    <ImageView
        android:background="@drawable/ic_error"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_116"
        android:layout_marginLeft="@dimen/dp_151"
        android:layout_width="@dimen/dp_74"
        android:layout_height="@dimen/dp_87"/>

    <TextView
        android:id="@+id/tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="还没有待上课记录"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_225"
        android:layout_marginLeft="@dimen/dp_129"
        android:layout_width="@dimen/dp_119"
        android:layout_height="@dimen/dp_15"/>

    <Button
        android:id="@+id/but"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_253"
        android:layout_marginLeft="@dimen/dp_129"
        android:text="立即约课"
        android:layout_width="@dimen/dp_118"
        android:layout_height="@dimen/dp_40"/>
</androidx.constraintlayout.widget.ConstraintLayout>